{
  "extends": "@santarepo/configs/typescript/base.tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "listEmittedFiles": true,
    "allowArbitraryExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./out",
    "removeComments": false,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "preserveSymlinks": true
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
